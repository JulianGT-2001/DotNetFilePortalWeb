@model fileuploadweb.Models.ViewModel.AutenticacionDosFactoresViewModel

@{
    ViewData["Title"] = "Dotnet file portal activate authenticator";
}

<div class="row min-vh-100 justify-content-center">
    <div class="col-12 col-sm-8 col-md-6 col-lg-4">
        <div class="p-4 rounded bg-white">
            <h2 class="fw-bold px-2 text-center pb-3 pt-3" style="color: #0d141c;">Activa la autenticación de dos factores</h2>
            <p>Escanea el siguiente código QR con tu aplicación. Si no puedes escanear el código, introduce la clave secreta en tu aplicación.</p>
            <div asp-validation-summary="All" class="text-danger mb-3"></div>
            <form asp-action="" asp-controller="Auth" method="post" autocomplete="off">
                <div class="mb-3">
                    <span>Clave secreta: @Model.Token</span>
                </div>
                <div class="mb-3">
                    <label asp-for="Code" class="form-label mb-1">Código de verificación</label>
                    <input asp-for="Code" class="form-control rounded border-0 p-3" style="background-color: #e7edf4; color: #0d141c;" placeholder="Enter your verification code" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
                <div class="d-flex pt-3 pb-3">
                    <button type="submit" class="btn btn-primary w-100">
                        <span>Activar</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>