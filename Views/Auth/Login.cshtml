@model fileuploadweb.Models.Dto.LoginDto

@{
    ViewData["Title"] = "Dotnet file portal Login";
}

<div class="row min-vh-100 justify-content-center">
    <div class="col-12 col-sm-8 col-md-6 col-lg-4">
        <div class="p-4 rounded bg-white">
            <h2 class="fw-bold px-2 text-center pb-3 pt-3" style="color:#0d141c;">Welcome back</h2>
            @* Mostrar resumen de validaciones *@
            <div asp-validation-summary="All" class="text-danger mb-3"></div>
            <form asp-action="Login" asp-controller="Auth" method="post" autocomplete="off">
                <div class="mb-3">
                    <label asp-for="email" class="form-label mb-1">Email</label>
                    <input asp-for="email" class="form-control rounded border-0 p-3" style="background-color: #e7edf4; color: #0d141c;" placeholder="Enter your email" />
                    <span asp-validation-for="email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="password" class="form-label mb-1">Password</label>
                    <input asp-for="password" class="form-control rounded border-0 p-3" style="background-color: #e7edf4; color: #0d141c;" placeholder="Enter your password" />
                    <span asp-validation-for="password" class="text-danger"></span>
                </div>
                <div class="d-flex pt-3 pb-3">
                    <button type="submit" class="btn btn-primary w-100">
                        <span>Login</span>
                    </button>
                </div>
            </form>
            <div class="text-center">
                <a href="@Url.Action("Register", "Auth")">Don't have an account? Sign up</a>
            </div>
        </div>
    </div>
</div>